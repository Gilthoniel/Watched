<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:id="@+id/textView"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/media_rating"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/media_overview"
        android:layout_alignParentTop="false"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:textColor="#ffa6a6a6"
        android:textSize="12sp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie title"
        android:id="@+id/media_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:id="@+id/textView3"
        android:layout_below="@+id/media_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/media_rating"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        style="?android:ratingBarStyleSmall"
        android:rating="2.5"/>
</RelativeLayout><!-- From: file:/C:/Development/grim/Watched2/watched/src/main/res/layout/dialog_search.xml -->