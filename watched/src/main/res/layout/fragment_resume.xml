<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movies"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" android:textStyle="bold" android:textSize="20sp"/>

    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pager_movies" android:layout_weight="1"/>

    <ch.watched.android.views.PaginationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pagination_movies"
            android:orientation="horizontal"
            android:gravity="center" android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV Shows"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" android:textSize="20sp" android:textStyle="bold"/>

    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pager_series" android:layout_weight="1"/>

    <ch.watched.android.views.PaginationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pagination_series"
            android:orientation="horizontal"
            android:gravity="center" android:padding="10dp"/>
</LinearLayout>