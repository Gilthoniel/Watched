<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="#fff5f5f5"
        card_view:cardElevation="10sp"
        card_view:contentPadding="0dp"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/media_poster"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/media_title"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/media_poster"
                android:textColor="#ff212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/media_overview"
                android:layout_below="@+id/media_title"
                android:layout_alignStart="@+id/media_title"
                android:textColor="#ff373737"
                android:textSize="12sp"
                android:textStyle="italic"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:maxLines="5"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>