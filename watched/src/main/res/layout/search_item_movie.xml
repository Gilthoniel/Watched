<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:background="#ffe3e3e3">

    <ImageView
            android:id="@+id/search_item_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_search"
            android:src="@android:drawable/ic_dialog_alert"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/search_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff161616"
                android:textSize="18sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />

        <TextView
                android:id="@+id/search_item_otitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff353535"
                android:textSize="14sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="italic"/>

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_item_rating"
                android:numStars="5"
                android:isIndicator="true"
                android:secondaryProgressTint="#ffe3d14b"
                android:progressBackgroundTint="#ffbababa"
                android:progressTint="#ffe3d14b"
                style="?android:attr/ratingBarStyleIndicator"/>
    </LinearLayout>

</LinearLayout>