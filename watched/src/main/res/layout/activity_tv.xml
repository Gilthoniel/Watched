<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="ch.watched.android.activity.ActivityTV">

    <!-- Toolbar -->
    <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar" />

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/ColorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:elevation="4dp" android:layout_alignParentStart="true" android:layout_below="@+id/tool_bar"
            android:id="@+id/toolbar_actions" android:visibility="gone"/>

    <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_listview"
            android:headerDividersEnabled="false"
            android:longClickable="false"
            android:layout_alignParentStart="true"
            android:background="@color/header_listview_episodes" android:divider="#ffad3e34" android:visibility="visible"
            android:layout_below="@+id/tool_bar"/>

</RelativeLayout>
