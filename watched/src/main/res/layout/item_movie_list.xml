<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:minHeight="0dp" android:minWidth="0dp"
                android:descendantFocusability="blocksDescendants">

    <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/indicator"
            android:layout_alignBottom="@+id/item_movie_title" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:background="@color/media_seen"/>
    <TextView
            android:id="@+id/item_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie title" android:textSize="16sp" android:layout_alignParentTop="true"
            android:padding="5dp"
            android:minHeight="50dp" android:gravity="center_vertical"
            android:layout_toEndOf="@+id/indicator" android:layout_toStartOf="@+id/checkbox_actions"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_actions" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/item_movie_title" android:layout_marginRight="10dp"
            android:focusable="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" android:layout_below="@+id/item_movie_title"
        android:visibility="gone" android:id="@+id/layout_hidden" android:background="#ffd3d3d3">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/item_movie_image"
                android:scaleType="centerCrop"
                android:visibility="visible" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" android:layout_marginTop="5dp" android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_movie_overview"
                android:visibility="visible"
                android:padding="5dp" android:textSize="16sp" android:textStyle="italic" android:singleLine="false"
                android:text="Overview ..."
                android:layout_below="@+id/item_movie_image" android:layout_alignParentStart="true"
                android:textColor="#ff000000"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_movie_rating"
                android:numStars="5"
                android:isIndicator="true"
                android:secondaryProgressTint="#ffe3d14b"
                android:progressBackgroundTint="#ffbababa"
                android:progressTint="#ffe3d14b"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_marginLeft="5dp"
                android:focusable="false"
                android:layout_toEndOf="@+id/item_movie_image" android:layout_alignTop="@+id/item_movie_image"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/release_date"
                android:layout_below="@+id/item_movie_rating" android:layout_alignStart="@+id/item_movie_rating"
                android:layout_marginTop="5dp" android:textColor="#ff000000"/>
    </RelativeLayout>

</RelativeLayout>