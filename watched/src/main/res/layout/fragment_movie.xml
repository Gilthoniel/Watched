<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
            android:id="@+id/toolbar_seen"
            layout="@layout/toolbar" />

    <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:fastScrollAlwaysVisible="false"
            android:fastScrollEnabled="true" android:layout_below="@+id/toolbar_seen"/>

    <TextView android:id="@android:id/empty"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:text="No items." android:layout_below="@+id/toolbar_seen"/>

</RelativeLayout>