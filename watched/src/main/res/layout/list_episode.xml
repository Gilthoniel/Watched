<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="#ffcdcdcd">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image"
            android:layout_below="@+id/linearLayout" android:layout_alignParentStart="true"
            android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/overview"
            android:layout_alignTop="@+id/image" android:layout_toEndOf="@+id/image" android:textColor="#ff1e1e1e"
            android:text="Overview ..." android:padding="5dp" android:textStyle="italic" android:textSize="12sp"
            android:layout_marginRight="5dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:id="@+id/linearLayout"
            android:layout_alignParentEnd="false" android:background="@color/item_listview_episodes">
        <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:id="@+id/seen_indicator" android:layout_weight="0" android:background="@color/media_seen"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/episode_number"
                android:padding="10dp" android:gravity="center_vertical|right"
                android:textStyle="bold" android:layout_weight="0"
                android:minWidth="40dp" android:textSize="16sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Episode title Episode title Episode title Episode title Episode title Episode title"
                android:id="@+id/episodeTitle" android:padding="10dp"
                android:singleLine="false" android:autoText="false" android:elegantTextHeight="false"
                android:layout_weight="1" android:gravity="center_vertical"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/episode_select" android:focusable="false" android:layout_marginRight="10dp"/>
    </LinearLayout>
</RelativeLayout>